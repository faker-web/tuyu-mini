<!--index.wxml-->
<view>
  <loading wx-if="{{showLoading}}" />
  <view wx-if="{{!showLoading}}" class="page-section swiper">
    <view>
      <swiper
        indicator-dots="{{indicatorDots}}"
        autoplay="{{autoplay}}"
        interval="{{interval}}"
        duration="{{duration}}"
        style="height: 234px;"
      >
        <block wx:for="{{swiper}}" wx:key="_id">
          <swiper-item>
            <image src="{{item.url}}" class="banner-item"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <view class="top-section">
      <cardList cardData="{{card}}" bind:scrollBottom="scrollBottom" bind:ocrClick="ocrClick"></cardList>
    </view>
  </view>
</view>
