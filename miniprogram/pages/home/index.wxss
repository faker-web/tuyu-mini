/**index.wxss**/

page {
  width: 100vw;
  height: 100vh;
  background-image: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/bg-02.png?sign=5028f3b71b8083a94ac6daf788e32723&t=1720144655');
  background-size: 100vw 100vh;
}

.scroll-view-container {
  width: 100%;
  height: 80vh;
}

.card-scroll {
  height: 89.5vh;
}

.page-section {
  padding-bottom: 60rpx;
  width: 100vw;
  height: 100vh;
}

.top-section-img {
  width: 100%;
  height: 221rpx;
  z-index: -1;
  position: absolute;
  top: 0;
}

.swiper .wx-swiper-dots {
  display: flex;
  align-items: center;
  justify-content: center;
}

.swiper .wx-swiper-dot {
  width: 12rpx;
  height: 12rpx;
  background: #D18068;
  border-radius: 12rpx;
}

.swiper .wx-swiper-dot.wx-swiper-dot-active {
  width: 24rpx;
  height: 24rpx;
  position: relative;
  background-image: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/Vector.png?sign=4a7cec29b953e252e0254d41f534682f&t=1718604911');
  background-color: transparent; 
  background-size:cover;
  background-repeat:no-repeat;
  background-position: center;
}

.banner-item {
  width: 100%;
}

.top-section {
  background-image: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/top-bg.png?sign=94705f3f7681be02d607f3984fda6c88&t=1718606479');
  background-color: transparent; 
  background-size:cover;
  background-repeat:no-repeat;
  background-size: 100%;
  position: relative;
  top: -40rpx;
  padding-top: 80rpx;
}