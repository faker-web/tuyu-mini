page {
  background: #CFBC9B;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
}

ec-canvas {
  width: 100%;
  height: 800rpx;
}

.top-img {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  top: 0;
  left: 0;
  width: 100%;
  height: 450rpx;
  background: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/map-top-img.png?sign=99e4cf92b6d522d15234befe4102b6d2&t=1719301233');
  background-size: cover;
  background-repeat: no-repeat;
}

.bottom-img {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 100%;
  height: 420rpx;
  background: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/map-bottom-img.png?sign=f1c0d5d4c4eb6f50720046569fae232f&t=1719301251');
  background-size: cover;
  background-repeat: no-repeat;
}

.detail-content-add {
  margin-top: 40px;
  padding: 0 40rpx;
  padding-top: 5rpx;
  height: 72rpx;
  box-sizing: content-box;
  background: url('https://636c-cloud1-0gq8f3qi3903d318-1327253936.tcb.qcloud.la/app-assets/detail-btn-bg.png?sign=d20f91f3e0a9ec45d2ae8375d3c9ab74&t=1719215792');
  background-size: cover;
  background-repeat: no-repeat;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'PingFang SC';
  font-style: normal;
  font-size: 15px;
  font-weight: 500;
  line-height: 34px;
  text-align: center;
  letter-spacing: -0.427208px;
  color: #FFBD8F;
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.08);
}

.detail-content-add-text {
  margin: 0 6rpx;
  font-size: 20px;
}

.map-container {
  display: flex;
  align-items: self-start;
  width: 100%;
  height: 100vh
}