.loading-container {
    width: 100vw;
    height: 100vh;
    background-color: #f3f4f6;
    display: flex;
    align-items: center;
    justify-content: center;
}

.loading-container-box {
    display: flex;
    align-items: center;
    flex-direction: column;
}

@Keyframes donut-spin {
    0% {
        transform: rotate(0deg);
    }
    
    100% {
        transform: rotate(360deg);
    }
}

.loading-container-loading-box {
    display: flex;
    align-items: center;
    justify-content: center;
    border-top: #fff;
    background: conic-gradient(from 0deg at 50.89% 50%, #97F7E0 0deg, #2C6BFF 360deg);
    border-radius: 50%;
    width: 56px;
    height: 56px;
    box-sizing: border-box;
    animation: donut-spin 1.2s linear infinite;
}

.loading-container-loading-box::after {  
    content: '';  
    position: absolute;  
    top: 50%;  
    left: 50%;  
    width: 100%;  
    height: 100%;  
    background-color: white; /* 裁剪区域的背景色 */  
    transform: translate(-50%, -50%);  
    border-radius: 50%;  
    clip-path: circle(45% at center); /* 调整这个值以改变裁剪区域的大小 */  
  }  

.loading-container-loading-logo {
    width: 50px;
    height: 50px;
    position: relative;
    top: -53px;
    z-index: 10;
}

.loading-container-loading-name {
    margin-top: 12px;
    font-family: 'PingFang SC';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 22px;
    text-align: center;
    letter-spacing: -0.21px;
    color: #3D2210;
    position: relative;
    top: -53px;
}